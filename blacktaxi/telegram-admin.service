[Unit]
Description=Telegram VIP Bot Admin Panel
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/blacktaxi/telegram-vip-bot
Environment=PATH=/opt/blacktaxi/telegram-vip-bot/venv/bin
ExecStart=/opt/blacktaxi/telegram-vip-bot/venv/bin/python3 admin_panel.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
